<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">
<!-- BEGIN: Head-->
<%- include('../common/header.ejs'); %>
<!-- END: Head-->

<!-- BEGIN: Body-->
<body class="vertical-layout vertical-menu-modern navbar-floating footer-static" data-open="click" data-menu="vertical-menu-modern" data-col="">

    <!-- BEGIN: Header-->
    <%- include('../common/navbar.ejs'); %>
    <!-- END: Header-->

    <!-- BEGIN: Main Menu-->
    <%- include('../common/sidebar.ejs'); %>
    <!-- END: Main Menu-->

    <!-- BEGIN: Content-->
    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="header-navbar-shadow"></div>
        <div class="content-wrapper">
            <div class="content-header row"></div>
            <div class="content-body">
                <div class="auth-wrapper">
                    <div class="auth-inner py-2">
                        <!-- Register v1 -->
                        <div class="card mb-0">
                            <div class="card-body">
                                <form class="auth-register-form" action="" method="POST">
                                    <div class="mb-1 mx-auto" style="width: 200px; height: 200px; position: relative; border-radius: 10px; overflow: hidden;">
                                        <div style="width: 100%; height: 100%; position: relative;">
                                            <% if (Array.isArray(view.img) && view.img.length > 0) { %>
                                                <img src="../<%- view.img[0].image %>" alt="full-size image" style="width: 100%; height: 100%; object-fit: cover; border-radius: 10px;">
                                            <% } else { %>
                                                <img src="../<%- view.image %>" alt="full-size image" style="width: 100%; height: 100%; object-fit: cover; border-radius: 10px;">
                                            <% } %>
                                        </div>
                                        
                                        <% if (Array.isArray(view.img) && view.img.length > 1) { %>
                                            <div id="slider" style="display: flex; width: 100%; overflow-x: auto; position: absolute; bottom: 2px; left: 0; height: 70px; padding: 5px; border-radius: 5px;">
                                                <% view.img.slice(1).forEach(function(student) { %>
                                                    <img src="../<%- student.image %>" alt="additional image" width="70" height="70" style="flex-shrink: 0; margin-right: 5px; border-radius: 5px;">
                                                <% }); %>
                                            </div>
                                        <% } %>
                                    </div>
                                    
                                    <div class="mb-1">
                                        <label for="first_name" class="form-label">Name</label>
                                        <input type="text" class="form-control" id="first_name" name="first_name" readonly value="<%= view.name %>" aria-describedby="first_name" tabindex="1" autofocus />
                                    </div>

                                    <button type="button" class="btn btn-primary" tabindex="6" onclick="window.history.back();">Back</button>
                                </form>
                                </form>
                            </div>
                        </div>
                        <!-- /Register v1 -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END: Content-->

    <div class="sidenav-overlay"></div>
    <div class="drag-target"></div>

    <!-- BEGIN: Footer-->
    <%- include('../common/footer.ejs'); %>
    <!-- END: Footer-->

    <!-- BEGIN: Vendor JS-->
    <script src="../../../app-assets/vendors/js/vendors.min.js"></script>
    <!-- END: Vendor JS-->

    <!-- BEGIN: Page Vendor JS-->
    <script src="../../../app-assets/vendors/js/charts/apexcharts.min.js"></script>
